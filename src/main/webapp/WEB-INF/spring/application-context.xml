<?xml version="1.0" encoding="UTF-8"?>
<!-- 
This is spring config for application services. This is a parent context
for the "webapp/dispatcher-servlet-context.xml" file, which is loaded by
a servlet configured in web.xml.

We should define business services in this file, while HTTP requests and MVC
related beans should go into dispatcher-servlet-context.xml instead.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- Define a quartzScheduler bean -->
	<import resource="scheduler/scheduler-with-jobs.xml"/>
	
	<!-- MySchedule scheduler service -->
	<bean name="schedulerService" class="myschedule.service.SchedulerService">
		<property name="scheduler" ref="quartzScheduler"></property>
	</bean>
		
		
</beans>
