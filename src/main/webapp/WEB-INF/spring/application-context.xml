<?xml version="1.0" encoding="UTF-8"?>
<!-- 
This is spring config for application services, and is loaded by
a ContextLoaderListener configured in web.xml.

We should define business services in this file, while HTTP requests and MVC
related beans should go into main-dispatcher-context.xml instead.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- Allow system prop placeholder -->
	<context:property-placeholder/>
	
	<!-- Scripting service. -->
	<bean name="groovyScriptingService" class="myschedule.service.GroovyScriptingService">
	</bean>
	
	<!-- 
	Scheduler finder
	Note: the "defaultSchedulerService" property will be autowired only if the bean name is present in context, else
	it will be left alone to null value.
	-->
	<bean name="schedulerServiceFinder" class="myschedule.service.SchedulerServiceFinder" autowire="byName">
		<property name="schedulerServiceContainer" ref="schedulerServiceContainer"></property>
	</bean>
		
	<!-- The serviceContainer will collect all Service beans and auto manage their init/destroy lifecycles. -->
	<bean name="serviceContainer" class="myschedule.service.ServiceContainer">
	</bean>
	
	<bean name="schedulerServiceFileDao" class="myschedule.service.SchedulerServiceFileDao">
		<property name="configStoreLocation" value="${user.home}/myschedule/quartz18"></property>
	</bean>
	
	<!-- The serviceContainer will collect all SchedulerService beans and auto manage their init/destroy lifecycles. -->
	<bean name="schedulerServiceContainer" class="myschedule.service.SchedulerServiceContainer">
		<property name="schedulerServiceDao" ref="schedulerServiceFileDao"></property>
	</bean>
			
	<!-- User defined scheduler services -->
	<import resource="${myschedule.spring.config:classpath:/myschedule/spring/scheduler/scheduler-services.xml}"/>
			
</beans>
