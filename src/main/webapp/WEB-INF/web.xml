<?xml version="1.0"?>
<web-app 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	version="2.5">

	<description>MySchedule - A Quartz Scheduler Dashboard</description>
	   
	<!-- Spring Application Context -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/application-context.xml</param-value>
	</context-param>
	
	<!-- MySchedule Web App Context Listener -->
	<listener>
		<listener-class>myschedule.web.WebAppContextListener</listener-class>
	</listener>
	
	<!-- Spring MVC Dispatcher Servlet -->
	<servlet>
		<servlet-name>main-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/main-dispatcher-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>main-dispatcher</servlet-name>
		<url-pattern>/main/*</url-pattern>
	</servlet-mapping>
	
	<!-- Session timeout in minutes. 1440 mins = 24 hours. -->
	<session-config>
        <session-timeout>1440</session-timeout> 
    </session-config>
	
</web-app>
